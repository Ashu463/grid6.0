datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  name      String?
  createdAt DateTime @default(now())
}
model Product {
  id        String   @id 
  createdAt DateTime 
  updatedAt DateTime
  name      String
  description String
  price     Int
  imageUrl  String
}